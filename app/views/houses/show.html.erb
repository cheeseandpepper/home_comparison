<p id="notice"><%= notice %></p>
<h1>Features</h1>
<%= form_for(@house) do |f| %>
  <%= f.fields_for :feature do |ff| %>
    <% if @house.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>

        <ul>
        <% @house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= link_to 'New Feature', new_house_feature_path(@house.id) %>
    <table class='table'>
      <thead>
        <tr>
          <th>name</th>
          <th>score</th>
          <th>weight</th>
          
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @features.each do |feature| %>
          <tr data-feature-id="<%= feature.id %>" data-house-id="<%= @house.id%>">
            <td><%= feature.name %></td>
            <td><input type='number' id='feature-score'><%= feature.score %></input></td>
            <td><input type='number' id='feature-weight'><%= feature.weight %></input></td>
            <td><%= link_to 'Show', house_feature_path(@house, feature) %></td>
            <td><%= link_to 'Edit', edit_house_feature_path(@house, feature) %></td>
            <td><%= link_to 'Destroy', house_feature_path(@house, feature), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>


<%= link_to 'Edit', edit_house_path(@house) %> |
<%= link_to 'Back', houses_path %>


<script>
$('tr input').on('change', function(event) {
  var target    = event.target;
  var column    = target.id.split('-')[1];
  var value     = target.value;
  var featureId = $(target).closest('tr').data('feature-id')
  var houseId   = $(target).closest('tr').data('house-id')
  
  var data = {};
  data[column] = value;
  data["featureId"] = featureId;
  var url = '/houses/' + houseId + '/features/' + featureId;

  $.ajax({
    type: 'PUT',
    url: url,
    data: { feature: data }
  })
})

</script>