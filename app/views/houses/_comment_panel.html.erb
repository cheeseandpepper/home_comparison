<div class="panel panel-default comment-panel">
  <div class="panel-heading comment-panel-heading" style="background-color: <%= current_user.color %>">
    <h3 class="panel-title comment-name-string"><%= comment.name %> - <%= time_ago_in_words(comment.created_at) %> ago</h3>
  </div>
  <div class="panel-body">
    <%= comment.body %> 
  </div>
</div>