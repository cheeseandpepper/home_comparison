<p id="notice"><%= notice %></p>
<%= link_to "Back", houses_path %>
<h1>Features</h1>

<div class='well'>
  <%= image_tag @house.image_url, width: 400 %>
  <p>Score: <span> <%= @house.score %></span></p>
</div>

<%= link_to 'New Feature', new_house_feature_path() %>
<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Score</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.score %></td>
        <td><%= feature.weight %></td>
        <td><%= link_to 'Show', house_feature_path(feature.house_id, feature) %></td>
        <td><%= link_to 'Edit', edit_house_feature_path(feature.house_id, feature) %></td>
        <td><%= link_to 'Destroy', house_feature_path(feature.house_id, feature), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

